# Non-sensitive defaults. Keep secrets in .env.secrets

APP_NAME=FastHub
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost
APP_PORT=8080

LOG_CHANNEL=stack
LOG_LEVEL=debug

TZ=UTC

# Database (non-sensitive)
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=app
DB_USERNAME=app

# Redis
CACHE_STORE=redis
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PORT=6379
# REDIS_PASSWORD=  # set in .env.secrets if enabled

# Queue/Session
BROADCAST_DRIVER=log
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# PostgreSQL UUID function to use in migrations/macros
PG_UUID_FUNCTION=gen_random_uuid()

# Tasks (limits)
TASKS_MAX_OPEN=5

# Files/Storage (S3-compatible)
FILES_DISK=s3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
